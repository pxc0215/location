<view class="container">
  <view class="info-item" bindtap="onTapAvatar">
    <text class="label">头像</text>
    <image class="avatar" src="{{userInfo.avatarUrl}}"></image>
  </view>
  <view class="info-item">
    <text class="label">昵称</text>
    <input class="nickname-input" 
           value="{{userInfo.nickName}}"
           bindinput="onInputNickname"
           placeholder="请输入昵称"/>
  </view>
  <view class="info-item">
    <text class="label">手机号</text>
    <input class="nickname-input" 
           value="{{userInfo.phoneNumber}}"
           bindinput="onInputPhone"
           type="number"
           maxlength="11"
           placeholder="请输入手机号"/>
  </view>
  <view class="info-item">
    <text class="label">企业</text>
    <input class="nickname-input" 
           value="{{userInfo.company}}"
           bindinput="onInputCompany"
           placeholder="请输入企业名称"/>
  </view>
</view>

<view class="nav-btn-container">
  <button class="save-btn" bindtap="saveUserInfo">完成</button>
</view> 