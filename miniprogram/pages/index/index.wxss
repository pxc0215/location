page {
  width: calc(100% - 124rpx);
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0 62rpx;
}

.usercenter {
  margin-top: 10rpx;
  width: 60rpx;
  height: 60rpx;
}

.usertitle {
  margin-top: 10rpx;
  margin-left: 10rpx;
}

.topimg {
  margin: 60rpx auto 60rpx;
  width: 592rpx;
  height: 592rpx;
}

.topimg_holder {
  margin: 120rpx auto 60rpx;
  width: 292rpx;
  height: 292rpx;
}

.title {
  font-family: PingFang-SC-Medium;
  font-size: 34rpx;
  color: var(--lb-color);
  text-align: center;
  font-weight: 400;
}

.item {
  display: flex;
  flex-direction: row;
}

.location_icon {
  width: 36rpx;
  height: 33rpx;
  margin-top: 63rpx;
}

.tips {
  font-family: PingFang-SC-Regular;
  margin-top: 60rpx;
  margin-left: 20rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.form-cell_title {
  margin-top: 60rpx;
  margin-bottom: 20rpx;
  font-size: 35rpx;
}

.form-cell_title-placeholder {
  font-size: small;
  color: lightgray;
}

.mainbtn {
  margin-top: 72rpx;
  height: 96rpx;
  width: 100% !important;
  line-height: 96rpx;
  border-radius: 8rpx;
  font-size: 34rpx;
  padding: 0;
  color: #FFFFFF;
  background: var(--mb-color);
}

.mainbtn:active {
  background: var(--zb-color);
}

.avatar-gray {
  filter: grayscale(100%);  /* 未登录时显示灰色 */
}