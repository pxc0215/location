/* 容器样式 */
.container {
  display: flex;
  flex-direction: column;
  background-color: #fff;
}

/* 图片区域样式 */
.image-section {
  width: 100%;
}

.order-swiper {
  width: 100%;
  height: 500rpx;
}

.order-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 地址信息样式 */
.address-section {
  padding: 24rpx;
  border-bottom: 1rpx solid #eee;
}

.address-text {
  font-size: 32rpx;
  color: #333;
}

/* 时间轴样式 */
.timeline-section {
  padding: 24rpx;
}

.timeline-item {
  position: relative;
  padding-left: 50rpx;
  margin-bottom: 30rpx;
}

.timeline-dot {
  position: absolute;
  left: 20rpx;
  width: 12rpx;
  height: 12rpx;
  background-color: #4A90E2;
  border-radius: 50%;
  top: 18rpx;
  /* 与标签、用户名、时间居中对齐 */
}

.timeline-content {
  margin-left: 10rpx;
  /* 调整与小圆点的间距 */
}

.timeline-header {
  display: flex;
  align-items: center;
}

.timeline-tag {
  background-color: #4A90E2;
  color: #fff;
  padding: 4rpx 10rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  margin-right: 16rpx;
}

.timeline-user {
  font-size: 26rpx;
  color: #333;
  display: inline-flex;
  align-items: center;
  margin-right: auto;
}

.timeline-time {
  font-size: 24rpx;
  color: #999;
}

/* 备注信息的样式 */
.timeline-desc {
  margin-top: 8rpx;
  /* 确保没有左侧的缩进或边距 */
  margin-left: 80rpx;
}

.desc-text {
  font-size: 26rpx;
  color: #666;
}

/* 订单详情页样�� */
.floating-button {
  position: fixed;
  bottom: 120rpx;
  right: 40rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #4A90E2;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
  z-index: 999;
}

.edit-icon {
  width: 50rpx;
  height: 50rpx;
  filter: brightness(0) invert(1);
}

.menu {
  position: fixed;
  bottom: 240rpx;
  right: 40rpx;
  width: 160rpx;
  background-color: #fff;
  border-radius: 8rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
  display: none;
  flex-direction: column;
  z-index: 998;
}

.menu.show {
  display: flex;
}

.menu-item {
  padding: 20rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1rpx solid #eee;
}

.menu-item:last-child {
  border-bottom: none;
}

/* 添加遮罩层样式 */
.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: transparent;
  z-index: 997;
  display: none;
}

.mask.show {
  display: block;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: none;
  z-index: 1000;
  align-items: center;
  justify-content: center;
}

.modal.show {
  display: flex;
}

.modal-content {
  width: 80%;
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  text-align: center;
}

.status-options {
  margin-bottom: 30rpx;
}

.status-option {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}

.status-option text {
  margin-left: 20rpx;
}

.remark-input {
  margin-bottom: 30rpx;
}

.remark-input textarea {
  width: 100%;
  height: 160rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 20rpx;
  box-sizing: border-box;
}

.modal-buttons {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.modal-buttons button {
  flex: 1;
  margin: 0;
  font-size: 28rpx;
}

.btn-cancel {
  background: #f5f5f5;
  color: #666;
}

.btn-confirm {
  background: #4A90E2;
  color: #fff;
}

.phone-icon {
  width: 28rpx;
  height: 28rpx;
  margin-left: 12rpx;
  vertical-align: -2rpx;
  opacity: 0.9;
  filter: invert(0.2);
}