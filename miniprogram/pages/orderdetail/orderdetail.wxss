/* 容器样式 */
.container {
  display: flex;
  flex-direction: column;
  background-color: #fff;
}

/* 图片区域样式 */
.image-section {
  width: 100%;
}

.order-image {
  width: 100%;
  height: 500rpx;
  object-fit: cover;
}

/* 地址信息样式 */
.address-section {
  padding: 24rpx;
  border-bottom: 1rpx solid #eee;
}

.address-text {
  font-size: 32rpx;
  color: #333;
}

/* 时间轴样式 */
.timeline-section {
  padding: 24rpx;
}

.timeline-item {
  position: relative;
  padding-left: 50rpx;
  margin-bottom: 30rpx;
}

.timeline-dot {
  position: absolute;
  left: 20rpx;
  width: 12rpx;
  height: 12rpx;
  background-color: #4A90E2;
  border-radius: 50%;
  top: 18rpx;
  /* 与标签、用户名、时间居中对齐 */
}

.timeline-content {
  margin-left: 10rpx;
  /* 调整与小圆点的间距 */
}

.timeline-header {
  display: flex;
  align-items: center;
}

.timeline-tag {
  background-color: #4A90E2;
  color: #fff;
  padding: 4rpx 10rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  margin-right: 16rpx;
}

.timeline-user {
  font-size: 26rpx;
  color: #333;
  margin-right: auto;
  /* 占据剩余空间，推动时间到右侧 */
}

.timeline-time {
  font-size: 24rpx;
  color: #999;
}

/* 备注信息的样式 */
.timeline-desc {
  margin-top: 8rpx;
  /* 确保没有左侧的缩进或边距 */
  margin-left: 80rpx;
}

.desc-text {
  font-size: 26rpx;
  color: #666;
}