<view class="container">
  <!-- 图片区域 -->
  <view class="image-section">
    <image class="order-image" src="{{order.files[0].id}}" bindtap="previewImage" mode="aspectFill" />
  </view>

  <!-- 地址信息，可长按复制 -->
  <view class="address-section" bindlongpress="copyAddress">
    <text class="address-text">{{order.address}}</text>
  </view>

  <!-- 时间轴 -->
  <view class="timeline-section">
    <!-- 创建状态 -->
    <view class="timeline-item">
      <view class="timeline-dot"></view>
      <view class="timeline-content">
        <view class="timeline-header">
          <view class="timeline-tag">创建</view>
          <view class="timeline-user">
            {{order.ownername}}
            <text wx:if="{{order.ownerPhone}}">（{{order.ownerPhone}}）</text>
          </view>
          <view class="timeline-time">{{order.time}}</view>
        </view>
        <!-- 备注信息（如果有） -->
        <view wx:if="{{order.desc}}" class="timeline-desc">
          <text class="desc-text">备注：{{order.desc}}</text>
        </view>
      </view>
    </view>
    <!-- 处理状态 -->
    <block wx:for="{{order.flowRecords}}" wx:for-item="item" wx:key="index">
      <view class="timeline-item">
        <view class="timeline-dot"></view>
        <view class="timeline-content">
          <view class="timeline-header">
            <view class="timeline-tag">处理中</view>
            <view class="timeline-user">{{item.userName}}</view>
            <view class="timeline-time">{{item.time}}</view>
          </view>
          <!-- 如果有备注信息，可以在这里添加 -->
        </view>
      </view>
    </block>
    <!-- 完成状态 -->
    <view wx:if="{{order.archived}}" class="timeline-item">
      <view class="timeline-dot"></view>
      <view class="timeline-content">
        <view class="timeline-header">
          <view class="timeline-tag">完成</view>
          <view class="timeline-user">{{order.archiveUser}}</view>
          <view class="timeline-time">{{order.archiveTime}}</view>
        </view>
      </view>
    </view>
  </view>

  <!-- 悬浮按钮和菜单 -->
  <view class="floating-button" bindtap="toggleMenu">
    <image class="edit-icon" src="/asset/edit.svg"></image>
  </view>
  <view class="menu {{showMenu ? 'show' : ''}}">
    <view class="menu-item" bindtap="onMenuItemClick" data-action="process">处理</view>
    <view class="menu-item">流转</view>
  </view>
</view>

<!-- 遮罩层 -->
<view class="mask {{showMenu ? 'show' : ''}}" bindtap="hideMenu"></view>

<!-- 状态修改弹窗 -->
<view class="modal {{showStatusModal ? 'show' : ''}}">
  <view class="modal-content">
    <view class="modal-title">修改状态</view>
    <view class="status-options">
      <view class="status-option" bindtap="selectStatus" data-status="processing">
        <radio checked="{{selectedStatus === 'processing'}}"/>
        <text>处理中</text>
      </view>
      <view class="status-option" bindtap="selectStatus" data-status="completed">
        <radio checked="{{selectedStatus === 'completed'}}"/>
        <text>已完成</text>
      </view>
    </view>
    <view class="remark-input">
      <textarea placeholder="请输入备注" value="{{statusRemark}}" bindinput="onRemarkInput"></textarea>
    </view>
    <view class="modal-buttons">
      <button class="btn-cancel" bindtap="closeStatusModal">取消</button>
      <button class="btn-confirm" bindtap="confirmStatusChange">确定</button>
    </view>
  </view>
</view>