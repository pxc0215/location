/* pages/orderlist.wxss */
page {
  background: #f5f5f5;
  padding: 24rpx;
  width: auto;
  box-sizing: border-box;
}

.order-list {
  width: 100%;
  padding-right: 24rpx;
}

.order-item {
  background: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  overflow: hidden;
  margin-right: 24rpx;
}

.order-header {
  display: flex;
  align-items: center;
  padding: 24rpx 24rpx 24rpx 12rpx;
}

.arrow-wrapper {
  display: flex;
  align-items: center;
  padding: 0 8rpx;
}

.arrow-icon {
  width: 40rpx;
  height: 40rpx;
  transition: transform 0.3s ease;
}

.arrow-down {
  transform: rotate(90deg);
}

.order-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
  background: #f0f0f0;
}

.order-info {
  flex: 1;
  min-width: 0;
}

.address-text {
  font-size: 32rpx;
  color: #333333;
  line-height: 1.4;
  margin-bottom: 12rpx;
  font-weight: 500;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.bottom-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.user-name {
  font-size: 28rpx;
  color: #666666;
  max-width: 200rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.order-time {
  font-size: 26rpx;
  color: #999999;
}

.order-detail {
  padding: 24rpx 24rpx 24rpx 104rpx;
  background: #f9f9f9;
  border-top: 1rpx solid #eee;
  opacity: 0;
  height: 0;
  transition: all 0.3s ease;
}

.order-detail.show {
  opacity: 1;
  height: auto;
}

.detail-icon {
  width: 40rpx;
  height: 40rpx;
}