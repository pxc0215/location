/* pages/orderlist.wxss */
page {
  background: #f5f5f5;
  padding: 24rpx;
  width: auto;
  box-sizing: border-box;
}

.order-list {
  width: 100%;
  padding-right: 24rpx;
}

.order-item {
  background: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  overflow: hidden;
}

.order-header {
  display: flex;
  align-items: center;
  padding: 24rpx 24rpx 24rpx 12rpx;
}

.order-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
  background: #f0f0f0;
}

.order-info {
  flex: 1;
  min-width: 0;
}

.address-text {
  font-size: 32rpx;
  color: #333333;
  line-height: 1.4;
  margin-bottom: 12rpx;
  font-weight: 500;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.bottom-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.user-name {
  font-size: 28rpx;
  color: #666666;
  max-width: 200rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.order-time {
  font-size: 26rpx;
  color: #999999;
}

.order-detail {
  padding: 24rpx 24rpx 24rpx 104rpx;
  background: #f9f9f9;
  border-top: 1rpx solid #eee;
  opacity: 0;
  height: 0;
  transition: all 0.3s ease;
}

.order-detail.show {
  opacity: 1;
  height: auto;
}

.detail-icon {
  width: 40rpx;
  height: 40rpx;
}

.status-timeline {
  padding: 20rpx 0;
  position: relative;
}

.status-item {
  display: flex;
  align-items: center;
  padding: 24rpx 24rpx 24rpx 24rpx;
  position: relative;
  margin-left: -80rpx;
}

.status-item::before {
  content: '';
  position: absolute;
  left: 5rpx;
  top: 0;
  bottom: 0;
  width: 2rpx;
  background: #E8E8E8;
  z-index: 1;
}

.status-item:first-child::before {
  top: 50%;
}

.status-item:last-child::before {
  bottom: 50%;
}

.status-icon {
  width: 12rpx;
  height: 12rpx;
  margin-right: 24rpx;
  position: relative;
  z-index: 2;
  background: #4A90E2;
  border-radius: 50%;
  flex-shrink: 0;
}

.status-content {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.status-type {
  font-size: 28rpx;
  color: #fff;
  font-weight: 500;
  background: #4A90E2;
  padding: 4rpx 16rpx;
  border-radius: 24rpx;
  min-width: 80rpx;
  text-align: center;
}

.status-user {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-left: 8rpx;
}

.status-time {
  font-size: 26rpx;
  color: #999;
  margin-left: auto;
}

.status-item.create .status-type,
.status-item.create .status-icon {
  background: #4A90E2;
}

.status-item.flow .status-type,
.status-item.flow .status-icon {
  background: #67C23A;
}

.status-item.archive .status-type,
.status-item.archive .status-icon {
  background: #909399;
}